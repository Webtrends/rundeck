abort("usage: knife exec update-id.knife $POD $TEAMCITYPROJECT $BUILDID") unless ARGV[4]

pod = ARGV[2].to_s
project_name = ARGV[3].to_s
new_id = ARGV[4].to_s

puts pod
puts project_name
puts new_id

builds = data_bag_item('wt_builds', pod)



puts "Updating build id from #{builds[project_name]} to #{new_id}"

builds[project_name] = new_id
builds.save

exit 0
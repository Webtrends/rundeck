<%- if @allow_http %>
allow_http: true
<% end %>
api:
  rest_endpoint: '<%= rest_endpoint %>'
  streamlab_endpoint: '<%= streamlab_endpoint %>'
portfolio:
  application_key: streams
  help_url: '<%= @help_url %>'
auth:
  endpoint: '<%= @auth_url %>'
  client_id: <%= @client_id %>
  client_secret: <%= @client_secret %>
  oauth2:
    scope: session
    <%- if @http_proxy %>
    connection_opts:
      proxy: '<%= @http_proxy.gsub(%r{/$},'') %>'
    <%- end %>
cam:
  endpoint: '<%= @cam_url %>'
sms:
  endpoint: '<%= @sms_url %>'


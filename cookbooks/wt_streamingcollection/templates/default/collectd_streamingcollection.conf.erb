				Attribute "Count"
			</Value>
        </MBean>
        <MBean "request_requests-handled">
			ObjectName "streamingcollection:type=requesthandler,name=requests-handled"
			InstancePrefix "STREAM_requesthandler_"
			InstanceFrom "name"
			<Value>
				Type "counter"
				InstancePrefix "Count"
				#InstanceFrom ""
				Table false
				Attribute "Count"
			</Value>
			<Value>
				Type "gauge"
				InstancePrefix "MeanRate"
				#InstanceFrom ""
				Table false
				Attribute "MeanRate"
			</Value>
        </MBean>
        #####################
        # Connection blocks #
        #####################
        #Connection Block
        <Connection>
			Host "<%= @node[:hostname] %>"
			ServiceURL "service:jmx:rmi:///jndi/rmi://localhost:<%= @node['wt_streamingcollection']['jmx_port'] %>/jmxrmi"
			Collect "classes"
			Collect "garbage_collector"
			Collect "java_threads"
			Collect "memory-heap"
			Collect "memory_nonheap"
			Collect "runtime"
			Collect "kafka"
			Collect "async"
			Collect "kafka-router_handle-send-message-error"
			Collect "kafka-router_messages-sent"
			Collect "kafka_send-message"
			Collect "request_handle-request"
			Collect "request_handle-request-error"
			Collect "request_requests-handled"
        </Connection>
        </Plugin>
</Plugin>



				InstancePrefix "Count"
				#InstanceFrom ""
				Table false
				Attribute "Count"
			</Value>
			<Value>
				Type "gauge"
				InstancePrefix "Max"
				#InstanceFrom ""
				Table false
				Attribute "Max"
			</Value>
			<Value>
				Type "gauge"
				InstancePrefix "Mean"
				#InstanceFrom ""
				Table false
				Attribute "Mean"
			</Value>
			<Value>
				Type "gauge"
				InstancePrefix "MeanRate"
				#InstanceFrom ""
				Table false
				Attribute "MeanRate"
			</Value>

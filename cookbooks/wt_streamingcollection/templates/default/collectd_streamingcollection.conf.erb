			</Value>
        </MBean>
        <MBean "request_handle-request-error">
			ObjectName "streamingcollection:type=requesthandler,name=handle-request-error"
			InstancePrefix "STREAM_requesthandler_"
			InstanceFrom "name"
			<Value>

				Type "gauge"
				InstancePrefix "Min"
				#InstanceFrom ""
				Table false
				Attribute "Min"
			</Value>
        </MBean>
        <MBean "request_handle-request">
			ObjectName "streamingcollection:type=requesthandler,name=handle-request"
			InstancePrefix "STREAM_requesthandler_"

log4j.category.com.webtrends.streaming = INFO, STREAMING

log4j.rootLogger=INFO, ROOT

log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=[%d] %p %m (%c)%n

log4j.appender.STREAMING=org.apache.log4j.RollingFileAppender
log4j.appender.STREAMING.File=/var/log/storm/service-control.streaming.log
log4j.appender.STREAMING.MaxBackupIndex=3
log4j.appender.STREAMING.MaxFileSize=200MB
log4j.appender.STREAMING.layout=org.apache.log4j.PatternLayout
log4j.appender.STREAMING.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss} %c{1} [%p] %m%n

log4j.appender.ROOT=org.apache.log4j.RollingFileAppender
log4j.appender.ROOT.File=/var/log/storm/service-control.log
log4j.appender.ROOT.MaxBackupIndex=3
log4j.appender.ROOT.MaxFileSize=200MB
log4j.appender.ROOT.layout=org.apache.log4j.PatternLayout
log4j.appender.ROOT.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss} %c{1} [%p] %m%n 

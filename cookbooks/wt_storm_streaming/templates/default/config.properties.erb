# Datacenter and pod names
datacenter=<%= @datacenter %>
pod=<%= @pod %>

# Geo and config services
geo.host=<%= @netacuity %>
cs.url=<%= @configservice %>/dcsid/streaming

# Zookeeper hosts
zookeeper.quorum=<%= @zookeeper_quorum %>

# Kafka consumer parameters
kafka.zookeeper.timeout.milliseconds=<%= @kafka_zookeeper_timeout_ms %>
kafka.consumer.topic=<%= @kafka_consumer_topic %>
kafka.consumer.group.id=<%= @kafka_consumer_group_id %>
kafka.auto.offset.reset=<%= @kafka_auto_offset_reset %>

# Streaming parameters, should have blank values in streaming
streaming.topology.emitter.bolt.count=<%= @streaming_topology_emitter_bolt_count %>
streaming.topology.augment.bolt.count=<%= @streaming_topology_augment_bolt_count %>
streaming.topology.filter.bolt.count=<%= @streaming_topology_filter_bolt_count %>

streaming.topology.emitter.bolt.tasks=<%= @streaming_topology_emitter_bolt_tasks %>
streaming.topology.augment.bolt.tasks=<%= @streaming_topology_augment_bolt_tasks %>
streaming.topology.filter.bolt.tasks=<%= @streaming_topology_filter_bolt_tasks %>

# Roots for zookeeper data
streaming.topology.zmq.emitter.znodeRoot=/StreamingZMQ
streaming.topology.zmq.data.znodeRoot=/DataAPIZMQ

# Zookeeper connection info (use this or audit.broker.list)
audit.zk.connect=<%= @audit_zookeeper_pairs %>
# The kafka producer type (defaults to async)
audit.producer.type=async
# The time span (in minutes) between each audit flush (defaults to 10)
audit.bucket.timespan=<%= @audit_bucket_timespan %>
# The topic used for auditing (defaults to stream-audit)
audit.topic=<%= @audit_topic %>

# This is the base url for the CAM service
webtrends.cam.baseUrl = <%=@cam_url%>
# This is the url to the REST service for getting product provisioning
webtrends.cam.provisioningDetail=%%baseUrl%%/account/%%accountId%%/product/%%productId%%
# This is the url to the REST service for stream types
webtrends.cam.streamType=%%baseUrl%%/product/sapi/streamtypes
# This is the url to the REST service for getting the blacklist
webtrends.cam.blacklist=%%baseUrl%%/product/sapi/blacklist

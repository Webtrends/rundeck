# Template from wt_storm

### base
java.library.path: "<%= @storm_config[:java_lib_path] %>"
storm.local.dir: "<%= @storm_config[:local_dir] %>"
storm.local.mode.zmq: <%= @storm_config[:local_mode_zmq] %>
storm.cluster.mode: "<%= @storm_config[:cluster_mode] %>"



### zookeeper.*
storm.zookeeper.servers:
<% @zookeeper_quorum.each do |host| -%>
    - "<%= host %>"
<% end -%>
storm.zookeeper.port: <%= @storm_config[:zookeeper][:port] %>
storm.zookeeper.root: "<%= @storm_config[:zookeeper][:root] %>"
storm.zookeeper.session.timeout: <%= @storm_config[:zookeeper][:session_timeout] %>
storm.zookeeper.retry.times: <%= @storm_config[:zookeeper][:retry_times] %>
storm.zookeeper.retry.interval: <%= @storm_config[:zookeeper][:retry_interval] %>



### supervisor.* configs are for node supervisors
supervisor.slots.ports:
<% for i in 0..(@storm_config[:supervisor][:workers]-1) -%>
    - <%= 6700+i -%>

<% end -%>
supervisor.childopts: "<%= @storm_config[:supervisor][:childopts] %>"
supervisor.worker.start.timeout.secs: <%= @storm_config[:supervisor][:worker_start_timeout] %>
supervisor.worker.timeout.secs: <%= @storm_config[:supervisor][:worker_timeout_secs] %>
supervisor.monitor.frequency.secs: <%= @storm_config[:supervisor][:monitor_frequecy_secs] %>
supervisor.heartbeat.frequency.secs: <%= @storm_config[:supervisor][:heartbeat_frequency_secs] %>
supervisor.enable: <%= @storm_config[:supervisor][:enable] %>



### worker.* configs are for task workers
worker.childopts: "<%= @storm_config[:worker][:childopts] %>"
worker.heartbeat.frequency.secs: <%= @storm_config[:worker][:heartbeat_frequency_secs] %>
task.heartbeat.frequency.secs: <%= @storm_config[:task][:heartbeat_frequency_secs] %>
task.refresh.poll.secs: <%= @storm_config[:task][:refresh_poll_secs] %>
zmq.threads: <%= @storm_config[:zmq][:threads] %>
zmq.linger.millis: <%= @storm_config[:zmq][:longer_millis] %>



### nimbus.* configs are for the master
nimbus.host: "<%= @storm_config[:nimbus][:host] %>"
nimbus.thrift.port: <%= @storm_config[:nimbus][:thrift_port] %>
nimbus.childopts: "<%= @storm_config[:nimbus][:childopts] %>"
nimbus.task.timeout.secs: <%= @storm_config[:nimbus][:task_timeout_secs] %>
nimbus.supervisor.timeout.secs: <%= @storm_config[:nimbus][:supervisor_timeout_secs] %>
nimbus.monitor.freq.secs: <%= @storm_config[:nimbus][:monitor_freq_secs] %>
nimbus.cleanup.inbox.freq.secs: <%= @storm_config[:nimbus][:cleanup_inbox_freq_secs] %>
nimbus.inbox.jar.expiration.secs: <%= @storm_config[:nimbus][:inbox_jar_expiration_secs] %>
nimbus.task.launch.secs: <%= @storm_config[:nimbus][:task_launch_secs] %>
nimbus.reassign: <%= @storm_config[:nimbus][:reassign] %>
nimbus.file.copy.expiration.secs: <%= @storm_config[:nimbus][:file_copy_expiration_secs] %>



### ui.* configs are for the master
ui.port: <%= @storm_config[:ui][:port] %>
ui.childopts: "<%= @storm_config[:ui][:childopts] %>"



### drpc.* configs
drpc.port: <%= @storm_config[:drpc][:port] %>
drpc.invocations.port: <%= @storm_config[:drpc][:invocations_port] %>
drpc.request.timeout.secs: <%= @storm_config[:drpc][:request_timeout_secs] %>



### transactional.* configs
transactional.zookeeper.servers:
<% @zookeeper_quorum.each do |host| -%>
    - "<%= host %>"
<% end -%>
transactional.zookeeper.root: "<%= @storm_config[:transactional][:zookeeper][:root] %>"
transactional.zookeeper.port: <%= @storm_config[:transactional][:zookeeper][:port] %>



### topology.* configs are for specific executing storms
topology.debug: <%= @storm_config[:topology][:debug] %>
topology.optimize: <%= @storm_config[:topology][:optimize] %>
topology.workers: <%= @storm_config[:topology][:workers] %>
topology.acker.executors: <%= @storm_config[:topology][:acker_executors] %>
topology.acker.tasks: <%= @storm_config[:topology][:acker_tasks] %>
topology.tasks: <%= @storm_config[:topology][:tasks] %>
topology.message.timeout.secs: <%= @storm_config[:topology][:message_timeout_secs] %>
topology.skip.missing.kryo.registrations: <%= @storm_config[:topology][:skip_missing_kryo_registrations] %>
topology.max.task.parallelism: <%= @storm_config[:topology][:max_task_parallelism] %>
topology.max.spout.pending: <%= @storm_config[:topology][:max_spout_pending] %>
topology.state.synchronization.timeout.secs: <%= @storm_config[:topology][:state_synchronization_timeout_secs] %>
topology.stats.sample.rate: <%= @storm_config[:topology][:stats_sample_rate] %>
topology.fall.back.on.java.serialization: <%= @storm_config[:topology][:fall_back_on_java_serialization] %>
topology.worker.childopts: <%= @storm_config[:topology][:worker_childopts] %>



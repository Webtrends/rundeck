#!/bin/sh
exec 2>&1 

if [ -z "$XSERV_DISPLAY_IDX" ] ; then
   [ -f /etc/default/screencap ] && . /etc/default/screencap
fi

if [ -z "$XSERV_DISPLAY_IDX" ] ; then
   echo "XSERV_DISPLAY_IDX is not set, please set it in /etc/environment. Was unable to load from /etc/default/screencap" >&2
   exit 1
fi
echo "Running on display $XSERV_DISPLAY_IDX" >&2
export XSERV_DISPLAY_IDX

exec chpst -u <%=@options[:user]%> <%=@options[:install_dir]%>/bin/service-control start


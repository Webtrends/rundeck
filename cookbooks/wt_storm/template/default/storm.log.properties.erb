log4j.category.com.webtrends.streaming.analysis.storm.BOLT = INFO, BOLT

log4j.rootLogger=INFO, ROOT

log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=[%d] %p %m (%c)%n

log4j.appender.BOLT=org.apache.log4j.RollingFileAppender
log4j.appender.BOLT.File=${storm.home}/logs/bolt.log
log4j.appender.BOLT.MaxBackupIndex=3
log4j.appender.BOLT.MaxFileSize=100MB
log4j.appender.BOLT.layout=org.apache.log4j.PatternLayout
log4j.appender.BOLT.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss} %c{1} [%p] %m%n

log4j.appender.ROOT=org.apache.log4j.RollingFileAppender
log4j.appender.ROOT.File=${storm.home}/logs/${logfile.name}
log4j.appender.ROOT.MaxBackupIndex=3
log4j.appender.ROOT.MaxFileSize=100MB
log4j.appender.ROOT.layout=org.apache.log4j.PatternLayout
log4j.appender.ROOT.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss} %c{1} [%p] %m%n
 

#!/bin/sh

# Setup basic path information.
MAIN="com.webtrends.streaming.analysis.util.MetadataLoader"
HOME_DIR="<%= @home_dir %>"
JAVA_HOME="<%= @java_home %>"

# Setup classpath, initially empty.
CP=""

# Add all .jar files to the classpath.
for jar in `ls $HOME_DIR/lib/*`; do
    if [ "" = "$CP" ]; then
        CP=$jar
    else
        CP=$CP:$jar
    fi
done

# Build the command line.
CMD="$JAVA_HOME/bin/java -cp $CP $MAIN $1 $2"


if [ `pwd` != "$HOME_DIR" ]; then
    echo "Must be in install dir to execute: $HOME_DIR"
    exit 1
fi

# Exec the command line.
exec $CMD

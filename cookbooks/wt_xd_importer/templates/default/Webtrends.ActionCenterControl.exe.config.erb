<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
    <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="Webtrends.ActionCenterControl.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    </sectionGroup>
  </configSections>

 <connectionStrings>
    <add name="wtMasterConnection" connectionString="Data Source=<%= @master_host %>;Initial Catalog=wtMaster;Integrated Security=True;Connect Timeout=300"
      providerName="System.Data.SqlClient" />
  </connectionStrings>

  <log4net>
    <appender name="BufferingForwardingAppender" type="log4net.Appender.BufferingForwardingAppender" >
      <bufferSize value="1"/>
      <appender-ref ref="LogFileAppender" />
    </appender>

    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender" >
      <file type="log4net.Util.PatternString" value="./logs/%property{LogName}"/>
      <!-- <preserveLogFileNameExtension value="true" /> -->
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <maxSizeRollBackups value="30" />
      <!-- This line does limit log size but causes writing log to a wrong file after scheduler restart 
        in case there are multiple files already created for the same day
        -->
      <!-- <maximumFileSize value="50MB" /> -->
      <datePattern value="-yyyyMMdd'.log'" />
      <param name="StaticLogFileName" value="false" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />

      <layout type="log4net.Layout.PatternLayout">
        <header value="-Start-&#xD;&#xA;" />
        <footer value="-End-&#xD;&#xA;" />
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- Setup the root category, add the appenders and set the default level -->
    <root>
      <level value="ERROR" />
      <appender-ref ref="LogFileAppender" />
    </root>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
  <applicationSettings>
    <Webtrends.ActionCenterControl.Properties.Settings>
      <setting name="OpsEmail" serializeAs="String">
        <value><%= @admin_email %></value>
      </setting>
      <setting name="TechSupportEmail" serializeAs="String">
        <value><%= @support_email %></value>
      </setting>
      <setting name="ExactTargetEmail" serializeAs="String">
        <value><%= @target_email %></value>
      </setting>
      <setting name="JobResultHandling" serializeAs="String">
        <value>
          {
          "Data" : {
          "FailureConfigurationProblem" :
          {
          "0" : {
          "Actions" : [
          "PauseIntegration",
          "NotifyTechSuport",
          "NotifyOps",
          "NotifyUserAboutErrorAndPause"
          ]
          }
          }
          ,
          "FailureDataProcessing" :
          {
          "0" : {
          "Actions" : [ "RetryWithDelay", "NotifyOps" ]
          },
          "10" : {
          "Actions" : [
          "PauseIntegration",
          "NotifyTechSuport",
          "NotifyOps",
          "NotifyUserAboutErrorAndPause"
          ]
          }
          }
          ,
          "FailureDestinationDataTransferError" :
          {
          "0" : {
          "Actions" : [ "RetryWithDelay", "NotifyUserAboutError" ]
          }
          ,
          "10" : {
          "Actions" : [
          "PauseIntegration",
          "NotifyTechSuport",
          "NotifyOps",
          "NotifyPartnerSupport",
          "NotifyUserAboutErrorAndPause"
          ]
          }
          },
          "FailureDestinationLoginProblem" :
          {
          "0" : {
          "Actions" : [ "PauseIntegration", "NotifyUserAboutErrorAndPause" ]
          }
          }
          ,
          "FailureDestinationNotReachable" :
          {
          "0" : {
          "Actions" : [ "RetryWithDelay", "NotifyUserAboutError" ]
          },
          "10" : {
          "Actions" : [
          "PauseIntegration",
          "NotifyTechSuport",
          "NotifyOps",
          "NotifyPartnerSupport",
          "NotifyUserAboutErrorAndPause"
          ]
          }
          },
          "FailureInternalNetworkError" :
          {
          "0" : {
          "Actions" : [ "RetryWithDelay" ]
          },

          "10" : {
          "Actions" : [ "RetryWithDelay", "NotifyOps" ]
          }
          },
          "FailureInvalidCommandLineParameters" :
          {
          "0" : {
          "Actions" : [ "NotifyOps" ]
          }
          }
          ,
          "FailureNotLicensed" :
          {
          "0" : {
          "Actions" : [ "PauseIntegration", "NotifyUserAboutErrorAndPause" ]
          }
          }
          ,
          "FailureSourceDataError" :
          {
          "0" : {
          "Actions" : [ "RetryWithDelay", "NotifyUserAboutErrorWarnPausing" ]
          },
          "10" : {
          "Actions" : [
          "PauseIntegration",
          "NotifyUserAboutErrorAndPause",
          "NotifyTechSuport",
          "NotifyOps"
          ]
          }
          },
          "FailureSourceDataMissingColumn" :
          {
          "0" : {
          "Actions" : [ "SkipToNext", "NotifyUserAboutErrorWarnPausing" ]
          },
          "7" : {
          "Actions" : [ "PauseIntegration", "NotifyUserAboutErrorAndPause" ]
          }
          },
          "FailureSourceDeleted" :
          {
          "0" : {
          "Actions" : [ "PauseIntegration", "NotifyUserAboutErrorAndPause" ]
          }
          }
          ,
          "FailureSourceDisabled" :
          {
          "0" : {
          "Actions" : [ "PauseIntegration", "NotifyUserAboutErrorAndPause" ]
          }
          },
          "FailureSourcePaused" :
          {
          "0" : {
          "Actions" : [ "SkipToNext", "NotifyUserAboutError" ]
          },
          "10" : {
          "Actions" : [ "SkipToNext", "NotifyUserAboutErrorWarnPausing" ]
          },
          "20" : {
          "Actions" : [ "PauseIntegration", "NotifyUserAboutErrorAndPause" ]
          }
          },
          "FailureUnexpectedProblem" :
          {
          "0" : {
          "Actions" : [ "RetryWithDelay", "NotifyTechSuport", "NotifyOps" ]
          },
          "10" : {
          "Actions" : [
          "NotifyTechSuport",
          "NotifyUserAboutError",
          "NotifyOps",
          "PauseIntegration",
          "NotifyUserAboutErrorAndPause"
          ]
          }
          },
          "Success" :
          {
          "0" : {
          "Actions" : [ "NotifyUserAboutSuccess" ]
          }
          },
          "SuccessMoreDataAvailable" :
          {
          "0" : {
          "Actions" : [ "NotifyUserAboutSuccess", "ProcessMoreData" ]
          }
          },
          "SuccessNoDataProcessed" :
          {
          "0" : {
          "Actions" : [ "None" ]
          }
          },
          "WarningSourceDataNotReady" :
          {
          "0" : {
          "Actions" : [ "RetryWithDelay" ]
          },
          "10" : {
          "Actions" : [
          "SkipToNext",
          "NotifyTechSuport",
          "NotifyUserAboutErrorWarnPausing",
          "NotifyOps"
          ]
          },
          "20" : {
          "Actions" : [
          "PauseIntegration",
          "NotifyTechSuport",
          "NotifyUserAboutErrorAndPause",
          "NotifyOps"
          ]
          }
          }

          }
          }
        </value>
      </setting>
      <setting name="BCCAlwaysEmail" serializeAs="String">
        <value><%= @bcc_email %></value>
      </setting>
    </Webtrends.ActionCenterControl.Properties.Settings>
  </applicationSettings>
</configuration>

LoadPlugin java

<Plugin "java">
        JVMArg "-verbose:jni"
        JVMArg "-Djava.class.path=/usr/share/collectd/java/collectd-api.jar:/usr/share/collectd/java/generic-jmx.jar"
        LoadPlugin "org.collectd.java.GenericJMX"
        <Plugin "GenericJMX">
        ################
        # MBean blocks #
        ################
		# Heap memory usage
		<MBean "memory_heap">
			ObjectName "java.lang:type=Memory"
			#InstanceFrom ""
			InstancePrefix "memory_heap"
			# Creates four values: committed, init, max, used
			<Value>
				Type "memory"
				#InstancePrefix ""
				#InstanceFrom ""
				Table true
				Attribute "HeapMemoryUsage"
			</Value>
		</MBean>
		# Non-heap memory usage
		<MBean "memory_nonheap">
			ObjectName "java.lang:type=Memory"
			#InstanceFrom ""
			InstancePrefix "memory_nonheap"
			# Creates four values: committed, init, max, used
			<Value>
				Type "memory"
				#InstancePrefix ""
				#InstanceFrom ""
				Table true
				Attribute "NonHeapMemoryUsage"
			</Value>
		</MBean>
		# Non-heap memory usage
		<MBean "java_threads">
			ObjectName "java.lang:type=Threading"
			#InstanceFrom ""
			InstancePrefix "java_threads"
			<Value>
				Type "gauge"
				InstancePrefix "ThreadCount"
				#InstanceFrom ""
				Attribute "ThreadCount"
			</Value>
		</MBean>
		# Garbage Collector stats
		<MBean "garbage_collector">
			ObjectName "java.lang:type=GarbageCollector,*"
			InstancePrefix "gc_"
			InstanceFrom "name"
			<Value>
				Type "invocations"
				InstancePrefix "collection_count"
				#InstanceFrom ""
				Table false
				Attribute "CollectionCount"
			</Value>
			<Value>
				Type "total_time_in_ms"
				InstancePrefix "collection_time"
				#InstanceFrom ""
				Table false
				Attribute "CollectionTime"
			</Value>
		</MBean>
		# Number of classes being loaded.
		<MBean "classes">
			ObjectName "java.lang:type=ClassLoading"
			InstancePrefix "loaded_classes"
			#InstanceFrom ""
			<Value>
				Type "gauge"
				InstancePrefix "loaded_classes"
				#InstanceFrom ""
				Table false
				Attribute "LoadedClassCount"
			</Value>
		</MBean>
		#Metrics
        <MBean "scs_latency">
			ObjectName "streamingauditor:type=latency,name=scs_latency"
			InstancePrefix ""
			InstanceFrom "name"
			<Value>
				Type "gauge"
				InstancePrefix "Max"
				#InstanceFrom ""
				Table false
				Attribute "Max"
			</Value>
			<Value>
				Type "gauge"
				InstancePrefix "Min"
				#InstanceFrom ""
				Table false
				Attribute "Min"
			</Value>
            <Value>
				Type "gauge"
				InstancePrefix "Mean"
				#InstanceFrom ""
				Table false
				Attribute "Mean"
			</Value>
            <Value>
				Type "gauge"
				InstancePrefix "MovingAverage"
				#InstanceFrom ""
				Table false
				Attribute "999thPercentile"
			</Value>
        </MBean>
        <MBean "scs_latency_snapshot">
			ObjectName "streamingauditor:type=latency,name=scs_latency_snapshot"
			InstancePrefix ""
			InstanceFrom "name"
			<Value>
				Type "gauge"
				InstancePrefix "Value"
				#InstanceFrom ""
				Table false
				Attribute "Value"
			</Value>
        </MBean>
        <MBean "tag_server_latency">
			ObjectName "streamingauditor:type=latency,name=tag_server_latency"
			InstancePrefix ""
			InstanceFrom "name"
			<Value>
				Type "gauge"
				InstancePrefix "Max"
				#InstanceFrom ""
				Table false
				Attribute "Max"
			</Value>
			<Value>
				Type "gauge"
				InstancePrefix "Min"
				#InstanceFrom ""
				Table false
				Attribute "Min"
			</Value>
            <Value>
				Type "gauge"
				InstancePrefix "Mean"
				#InstanceFrom ""
				Table false
				Attribute "Mean"
			</Value>
            <Value>
				Type "gauge"
				InstancePrefix "MovingAverage"
				#InstanceFrom ""
				Table false
				Attribute "999thPercentile"
			</Value>
        </MBean>
            <MBean "tag_server_latency_snapshot">
			ObjectName "streamingauditor:type=latency,name=tag_server_latency_snapshot"
			InstancePrefix ""
			InstanceFrom "name"
			<Value>
				Type "gauge"
				InstancePrefix "Value"
				#InstanceFrom ""
				Table false
				Attribute "Value"
			</Value>
        </MBean>
        #####################
        # Loop through the individual hosts and pull the values
        #####################
        <% @scs_urls.each_with_index do |host,index| %>
            <MBean "scs_latency_host_<%=index%>">
                ObjectName "streamingauditor:type=latency,scope=scs_latency_host,name=<%=URI(host).host%>"
                InstancePrefix "scs_latency_host_"
                InstanceFrom "name"
                <Value>
                    Type "gauge"
                    InstancePrefix "Max"
                    Table false
                    Attribute "Max"
                </Value>
                <Value>
                    Type "gauge"
                    InstancePrefix "Min"
                    Table false
                    Attribute "Min"
                </Value>
                <Value>
                    Type "gauge"
                    InstancePrefix "Mean"
                    Table false
                    Attribute "Mean"
                </Value>
                <Value>
                    Type "gauge"
                    InstancePrefix "MovingAverage"
                    #InstanceFrom ""
                    Table false
                    Attribute "999thPercentile"
                </Value>
            </MBean>
        <% end %>
        <% @ts_urls.each_with_index do |host,index| %>
            <MBean "tag_server_latency_host_<%=index%>">
                ObjectName "streamingauditor:type=latency,scope=tag_server_latency_host,name=<%=URI(host).host%>"
                InstancePrefix "tag_server_latency_host_"
                InstanceFrom "name"
                <Value>
                    Type "gauge"
                    InstancePrefix "Max"
                    Table false
                    Attribute "Max"
                </Value>
                <Value>
                    Type "gauge"
                    InstancePrefix "Min"
                    Table false
                    Attribute "Min"
                </Value>
                <Value>
                    Type "gauge"
                    InstancePrefix "Mean"
                    Table false
                    Attribute "Mean"
                </Value>
                <Value>
                    Type "gauge"
                    InstancePrefix "MovingAverage"
                    #InstanceFrom ""
                    Table false
                    Attribute "999thPercentile"
                </Value>
            </MBean>
        <% end %>
        #####################
        # Connection blocks #
        #####################
        #Connection Block
        <Connection>
			Host "<%= node['hostname'] %>"
			ServiceURL "service:jmx:rmi:///jndi/rmi://localhost:<%= node['wt_streamingauditor']['jmx_port'] %>/jmxrmi"
			Collect "classes"
			Collect "garbage_collector"
			Collect "java_threads"
			Collect "memory_heap"
			Collect "memory_nonheap"
            Collect "scs_latency"
            Collect "scs_latency_snapshot"
            Collect "tag_server_latency"
            Collect "tag_server_latency_snapshot"
            <% @ts_urls.each_with_index do |host,index| %>
                Collect "tag_server_latency_host_<%=index%>"
            <% end %>
            <% @scs_urls.each_with_index do |host,index| %>
                Collect "scs_latency_host_<%=index%>"
            <% end %>
        </Connection>
    </Plugin>
</Plugin>

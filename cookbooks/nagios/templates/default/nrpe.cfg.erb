pid_file=<%= node['nagios']['nrpe']['pidfile'] %>
server_port=5666
nrpe_user=nagios
nrpe_group=nagios
dont_blame_nrpe=<%= node['nagios']['nrpe']['dont_blame_nrpe'] %>
debug=0
command_timeout=<%= node['nagios']['nrpe']['command_timeout'] %>
allowed_hosts=<%= @mon_host.join(',') %>
include_dir=<%= @nrpe_directory %>

# The following examples use hardcoded command arguments...

command[check_users]=<%= node['nagios']['plugin_dir'] %>/check_users -w 5 -c 10
command[check_load]=<%= node['nagios']['plugin_dir'] %>/check_load -w 15,10,5 -c 30,25,20
command[check_hda1]=<%= node['nagios']['plugin_dir'] %>/check_disk -w 20% -c 10% -p /dev/hda1
command[check_zombie_procs]=<%= node['nagios']['plugin_dir'] %>/check_procs -w 5 -c 10 -s Z
command[check_total_procs]=<%= node['nagios']['plugin_dir'] %>/check_procs -w 150 -c 200
command[check_chef_client]=<%= node['nagios']['plugin_dir'] %>/check_procs -w 1:2 -c 1:2 -C chef-client
command[check_nginx]=<%= node['nagios']['plugin_dir'] %>/check_procs -w 2:3 -c 1:5 -C nginx
command[check_solr]=<%= node['nagios']['plugin_dir'] %>/check_solr.rb -c 10 -r 10 -h localhost -p solr
command[chef_server_web_api_check]=<%= node['nagios']['plugin_dir'] %>/check_http -H #{node[:fqdn]} -p 4000 -r "Chef"
command[chef_server_web_ui_check]=<%= node['nagios']['plugin_dir'] %>/check_http -H #{node[:fqdn]} -p 4040 -u /users/login -r "Chef"
command[check_ipmi_sensors]=<%= node['nagios']['plugin_dir'] %>/check_ipmi.pl
command[check_raid]=<%= node['nagios']['plugin_dir'] %>/check_megaraid_sas


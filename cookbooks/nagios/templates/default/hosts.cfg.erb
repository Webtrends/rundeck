<% @nodes.each do |n| -%>
<% unless n.name == node.name -%>
define host {
  use server
	address <%= n['ipaddress'] %>
	host_name <%= n['hostname'] %>
<% if n.run_list.roles.nil? || n.run_list.roles.length == 0 -%>
  hostgroups all
<% elsif node['nagios']['multi_environment_monitoring'] -%>
  hostgroups <%= n.run_list.roles.to_a.join(",") %>,<%= n.chef_environment %>,<%= n.os %>
<% end -%>
<% else -%>
  hostgroups <%= n.run_list.roles.to_a.join(",") %>,<%= n.os %>
<% end -%>
<% if node['nagios']['non_alerting_environments'].include?("#{n.chef_enviroment}") -%>
  notifications_enabled 0
<% end -%>
}
<% end -%>

<% end -%>

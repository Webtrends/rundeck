        </MBean>
        <MBean "collection_latency">
			ObjectName "streamingapi:type=streameventhandler,name=collection-latency"
			InstancePrefix "SAPI_collection_latency"
            <Value>
				Type "gauge"
				InstancePrefix "Max"
				Table false
				Attribute "Max"
			</Value>
			<Value>
				Type "gauge"
				InstancePrefix "Min"
				Table false
				Attribute "Min"
			</Value>
            <Value>
				Type "gauge"
				InstancePrefix "Mean"
				Table false
				Attribute "Mean"
			</Value>
        </MBean>
        <MBean "socket_handle_request">
			ObjectName "streamingapi:type=sockethandler,name=handle-request"
			InstancePrefix "SAPI_socket_handle_request"
            <Value>
				Type "gauge"
				InstancePrefix "Count"
				Table false
				Attribute "Count"
			</Value>
			<Value>
				Type "gauge"
				InstancePrefix "Max"
				Table false

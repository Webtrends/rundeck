# are we monitoring at all
monitoring.enabled = <%= node[:wt_monitoring][:monitoring_enabled] %>
# should we publish to jmx
monitoring.jmx.enabled = <%= node[:wt_monitoring][:jmx_enabled] %>
# the prefix to append metrics being sent to graphite
monitoring.metric.prefix = <%= node[:wt_monitoring][:metric_prefix] %>

# Should we push metrics to graphite
monitoring.graphite.enabled=<%= node[:wt_streaminganalysis_monitor][:graphite_enabled] %>
# What is the host of graphite
monitoring.graphite.host=%= node[:wt_monitoring][:graphite_server] %>
# What port is graphite listening on
monitoring.graphite.port=%= node[:wt_monitoring][:graphite_port] %>
# How often (minutes) should we flush metrics to graphite
monitoring.graphite.interval=<%= node[:wt_streaminganalysis_monitor][:graphite_interval] %>

# Are health checks enabled
healthcheck.enabled=<%= node[:wt_monitoring][:healthcheck_enabled] %>
# This is for future use for having health checks bound to an alternative port
healthcheck.port=<%= node[:wt_monitoring][:healthcheck_port] %>

# Are we listening to Storm status
statuslistener.enabled=<%= node[:wt_streaminganalysis_monitor][:statuslistener.enabled] %>
statuslistener.znode.root=<%= node[:wt_streaminganalysis_monitor][:statuslistener.znode.root] %>

# Are we listening to metrics
metricslistener.enabled=<%= node[:wt_streaminganalysis_monitor][:metricslistener.enabled] %>
# The topic used for auditing (defaults to stream-audit)
metricslistener.topic=<%= node[:wt_streaminganalysis_monitor][:metricslistener.topic] %>

# This is the machine for the Nimbus box
storm.host=localhost
# This is the thrift port in Nimbus
storm.port=<%= node[:wt_storm_streaming][:nimbus][:thrift_port] %>
# This is how often to call (seconds) Nimbus to retrieve statistics
storm.stats.interval=<%= node[:wt_streaminganalysis_monitor][:stats_interval] %>



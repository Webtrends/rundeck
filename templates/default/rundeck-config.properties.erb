#loglevel.default is the default log level for jobs: ERR,WARN,INFO,VERBOSE,DEBUG
loglevel.default=<%= @log_level %>

#rss.enabled if set to true enables RSS feeds that are public (non-authenticated)
rss.enabled=<%= @rss_enabled %>
#
<% if @rdbms_enable == true %>
  <% if @rdbms_type == 'mysql' %>
dataSource.url = jdbc:mysql://<%= @rdbms_location %>:<%= @rdbms_port %>/<%= @rdbms_dbname %>?autoReconnect=true
dataSource.driverClassName=com.mysql.jdbc.Driver
  <% elsif @rdbms_type == 'oracle' %>
dataSource.url = jdbc:oracle:thin:@:<%= @rdbms_location %>:<%= @rdbms_port %>:XE
dataSource.driverClassName = oracle.jdbc.driver.OracleDriver
dataSource.dialect = org.hibernate.dialect.<%= @rdbms_dialect %>
  <% end %>
dataSource.dbCreate=update
dataSource.username = <%= @rdbms_user %>
dataSource.password = <%= @rdbms_password %>
<% else %>
dataSource.url = jdbc:h2:file:/var/lib/rundeck/data/rundeckdb;MVCC=true
<% end %>

rundeck.security.useHMacRequestTokens=false

<% if @mail_enable == true %>
grails.mail.host=<%=@mail_host %>
grails.mail.port=<%=@mail_port %>
<% unless @mail_user.nil? %>grails.mail.username=<%=@mail_user %><% end %>
<% unless @mail_password.nil? %>grails.mail.password=<%=@mail_password %><% end %>
<% end %>
grails.mail.default.from=<%=@mail_email %>

grails.serverURL=<%= @grails_server_url%><% unless [80,443].include?(@grails_port)%>:<%=@grails_port.to_s%><% end %>

quartz.props.threadPool.threadCount = <%= @quartz_threadPoolCount.to_i %>

rundeck.log4j.config.file = <%= @configdir %>/log4j.properties

# Custom config
<% if @custom_rundeck_config %>
<% @custom_rundeck_config.sort.each do |key, value| %>
<%= key %>=<%= value %>
<% end %>
<% end %>
